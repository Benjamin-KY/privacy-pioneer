{
  "name": "Integrated Privacy Analysis",
  "version": "0.0.2",
  "browser_action": {
    "default_title": "Dashboard"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "applications": {
    "gecko": {
      "id": "integrated-privacy-analysis@privacytechlab.org",
      "strict_min_version": "52.0"
    }
  },
  "manifest_version": 2
}
