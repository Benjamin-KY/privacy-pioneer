{
  "name": "integrated-privacy-analysis",
  "version": "0.0.1",
  "permissions": ["webRequest", "<all_urls>", "webRequestBlocking", "geolocation", "storage", "tabs"],
  "manifest_version": 2,
  "background": {
    "scripts": ["bundle.background.js"]
  },
  "browser_action": {
    "default_title": "Integrated Privacy Analysis",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
